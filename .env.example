# ZtionSec Environment Configuration
# Copy this file to .env and update the values

# Django Settings
SECRET_KEY=ztionsec-prod-key-2024-secure-random-string-for-production-deployment-with-high-entropy-values-12345
DEBUG=False
ALLOWED_HOSTS=ztionsec-security-platform.onrender.com,.onrender.com,localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ztionsec

# Security Settings
SECURE_SSL_REDIRECT=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True

# Cache Configuration
USE_MEMORY_CACHE=false

# API Keys (Optional)
HAVEIBEENPWNED_API_KEY=your-hibp-api-key
SHODAN_API_KEY=your-shodan-api-key
CENSYS_API_ID=your-censys-api-id
CENSYS_API_SECRET=your-censys-api-secret

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# AdSense Configuration (Optional)
ADSENSE_ENABLED=True
ADSENSE_PUBLISHER_ID=ca-pub-your-publisher-id
ADSENSE_DEBUG=False

# Production Environment Variables for Render
# Add these to your Render environment variables:
# SECRET_KEY=ztionsec-prod-key-2024-secure-random-string-for-production-deployment-with-high-entropy-values-12345
# DEBUG=False
# SECURE_SSL_REDIRECT=True
# CSRF_COOKIE_SECURE=True
# SESSION_COOKIE_SECURE=True

# Logging
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARNING

# Rate Limiting
RATE_LIMIT_ENABLED=True
SCAN_RATE_LIMIT=10/hour
API_RATE_LIMIT=100/hour
