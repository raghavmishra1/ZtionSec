# ZtionSec Security Configuration
# Copy these settings to your production environment

# Core Security Settings
DEBUG=False
SECRET_KEY=your-cryptographically-secure-secret-key-here

# Host Configuration (NEVER use * in production)
ALLOWED_HOSTS=ztionsec-security-platform.onrender.com,.onrender.com,yourdomain.com

# SSL/HTTPS Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Cookie Security
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
CSRF_COOKIE_HTTPONLY=True

# Content Security Policy
DISABLE_CSP=False

# Rate Limiting
RATE_LIMIT_ENABLED=True

# AdSense Configuration
ADSENSE_ENABLED=True
ADSENSE_DEBUG=False
ADSENSE_SHOW_TO_STAFF=False
ADSENSE_PUBLISHER_ID=pub-9693358517951567

# Database Security
DATABASE_CONN_MAX_AGE=600
DATABASE_CONN_HEALTH_CHECKS=True

# Logging
LOG_LEVEL=WARNING
SECURITY_LOG_LEVEL=WARNING
